{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<section class="login">
		<div class="login-background">
			<img src="{{ asset('build/images/siora-photography-ZslFOaqzERU-unsplash.jpg') }}" alt="">
			<form method="post">
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				{% if app.user %}
					<div class="mb-3">
						Vous êtes connectez entant que
						{{ app.user.userIdentifier }},
						<a href="{{ path('app_logout') }}">Se déconnecter</a>
					</div>
				{% endif %}
				<div class="login-form">
					<div class="form-box-tittle">
						<h1 class="login-form-title">Bienvenue chez Upikajob!</h1>
						<p class="login-form-subtitle">Connectez-vous à votre compte</p>
					</div>
					<div class="form-input">
						<label for="inputEmail">Votre email</label>
						<input type="email" value="{{ last_username }}" name="email" id="inputEmail" placeholder="xyz@email.com" class="form-control" autocomplete="email" required autofocus>
					</div>
					<div class="form-input-password-box">
						<div class="form-input">
							<label for="inputPassword">Votre mot de passe</label>
							<input type="password" name="password" id="inputPassword" class="form-control" placeholder="********" autocomplete="current-password" required>
						</div>
						<div class="form-remember">
							<div class="form-remember-check">
								<input type="checkbox">
								<span>Se souvenir de moi</span>
							</div>
							<a href="">
								<span class="form-forgot-password">Mot de passe oublié?</span>
							</a>
						</div>
					</div>
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
					<button class="login-btn" type="submit">Se connecter</button>
					<span class="form-separator">ou</span>
					<div class="form-auth">
						<div class="form-auth-box">
							<svg class="form-auth-svg" xmlns="http://www.w3.org/2000/svg" height="24" viewbox="0 0 24 24" width="24">
								<path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
